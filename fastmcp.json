{
  "server": {
    "name": "ctxfy-mcp-server",
    "version": "1.0.0",
    "description": "ctxfy MCP Server Base with FastMCP"
  },
  "host": "0.0.0.0",
  "port": 8000,
  "logging": {
    "level": "INFO",
    "format": "json",
    "required_fields": ["prompt_id", "latency_ms", "llm_model"]
  },
  "llm": {
    "default_model": "default",
    "timeout": 30,
    "max_retries": 3
  },
  "cors": {
    "origins": ["*"],
    "allow_credentials": true,
    "allow_methods": ["*"],
    "allow_headers": ["*"]
  }
}